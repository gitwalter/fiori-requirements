{
  "name": "fiori-requirements",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5.1.5",
    "@sap/hana-client": "^2.6.61",
    "@sap/xsenv": "^3.1.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "express": "^4",
    "jest": "^27.0.6",
    "mocha": "^9.0.0",
    "node-fetch": "^2.6.1",
    "node-jose": "^2.0.0",
    "nyc": "^15.1.0",
    "passport": "^0.4.1",
    "superagent": "^6.1.0"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.0.5",
    "@sap/ux-specification": "^1.84.12",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run",
    "test": "npm run test-endpoint & npm run test-unittest & npm run test-jest",    
    "test-unittest": "nyc --check-coverage --lines 70 --per-file --reporter=html --reporter=text  mocha test/unittests.js --timeout 30000 --exit",
    "test-jest": "jest",
    "test-endpoint": "nyc --check-coverage --lines 10 --per-file --reporter=html --reporter=text  mocha test/endpoint.js --timeout 15000 --exit"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql",
        "model": "*"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/fiori-requirements-ui",
    "app/project1",
    "app/fiori-requirements-ui"
  ]
}
